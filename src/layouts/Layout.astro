---
import '../styles/global.css';
import Header from '../components/Header.astro';
import lowkeyLogo from '../assets/lowkey_logo.png';

export interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "lowkey - Fun, consistent reminders to show up in your relationships",
	description = "Fun, consistent, personalized nudges to help you be more thoughtful in your relationship. Small gestures, big impact."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://getlowkey.app" />
		<meta property="og:image" content={new URL(lowkeyLogo.src, Astro.url)} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
