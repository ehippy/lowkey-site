---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Lowkey">
	<main>
		<div class="error-page">
			<div class="error-content">
				<h1 class="error-emoji">🕊️</h1>
				<h2 class="error-title">Quietly lost</h2>
				<p class="error-description">This page seems to have wandered off. Like a thoughtful gesture that got misplaced.</p>
				<a href="/" class="btn btn-primary">Head back home</a>
			</div>
		</div>
	</main>
</Layout>


