---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Lowkey">
	<main>
		<div class="error-container">
			<div class="error-content">
				<h1>üïäÔ∏è</h1>
				<h2>Quietly lost</h2>
				<p>This page seems to have wandered off. Like a thoughtful gesture that got misplaced.</p>
				<a href="/" class="home-link">Head back home</a>
			</div>
		</div>
	</main>
</Layout>

<style>
	.error-container {
		min-height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
	}
	
	.error-content {
		text-align: center;
		max-width: 500px;
	}
	
	h1 {
		font-size: 4rem;
		margin-bottom: 1rem;
		opacity: 0.8;
	}
	
	h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: #2c3e50;
		font-weight: 300;
	}
	
	p {
		font-size: 1.2rem;
		line-height: 1.6;
		color: #7f8c8d;
		margin-bottom: 2rem;
	}
	
	.home-link {
		display: inline-block;
		padding: 12px 24px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 500;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}
	
	.home-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
	}
	
	@media (max-width: 768px) {
		h1 {
			font-size: 3rem;
		}
		
		h2 {
			font-size: 2rem;
		}
		
		p {
			font-size: 1.1rem;
		}
	}
</style>
