			action: 'Take Selfie'
		},
		{
			icon: 'üéôÔ∏è',
			title: 'Voice message',
			text: 'Record a quick voice memo telling Quinn why you love them',
			action: 'Record voice memo'
		},
		{
			icon: 'üí¨',
			title: 'Check in',
			text: 'Ask Casey about that important meeting she had today',
			action: 'Ask her'
		}
	];

	let currentIndex = Math.floor(Math.random() * notifications.length);
	let isFirstLoad = true;

	function updateNotification() {
		const notificationElement = document.getElementById('demo-notification');
		if (!notificationElement) return;

		const notification = notifications[currentIndex];
		const icon = notificationElement.querySelector('.notification-icon');
		const title = notificationElement.querySelector('.notification-title');
		const text = notificationElement.querySelector('.notification-text');
		const actionBtn = notificationElement.querySelector('#demo-action-btn');
		
		if (isFirstLoad) {
			// First load: just show the random notification
			if (icon) icon.textContent = notification.icon;
			if (title) title.textContent = notification.title;
			if (text) text.textContent = notification.text;
			if (actionBtn) actionBtn.textContent = notification.action;
			
			// Slide in from top
			notificationElement.style.opacity = '1';
			notificationElement.style.transform = 'translateY(0)';
			isFirstLoad = false;
		} else {
			// Subsequent updates: slide out, change content, slide in
			notificationElement.style.opacity = '0';
			notificationElement.style.transform = 'translateY(-120px)';
			
			setTimeout(() => {
				// Update content
				if (icon) icon.textContent = notification.icon;
				if (title) title.textContent = notification.title;
				if (text) text.textContent = notification.text;
				if (actionBtn) actionBtn.textContent = notification.action;
				
				// Reset position to slide in from top
				notificationElement.style.transform = 'translateY(-120px)';
				notificationElement.style.opacity = '1';
				
				// Trigger slide in animation
				setTimeout(() => {
					notificationElement.style.transform = 'translateY(0)';
				}, 50);
			}, 500);
		}
		
		// Move to next notification (avoid repeating the same one)
		const previousIndex = currentIndex;
		do {
			currentIndex = Math.floor(Math.random() * notifications.length);
		} while (currentIndex === previousIndex && notifications.length > 1);
	}

	// Email submission to API
	async function submitEmailToAPI(email) {
		try {
			const response = await fetch('https://asfurk8l78.execute-api.us-east-1.amazonaws.com/prod/interest', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json',
				},
				body: JSON.stringify({ email: email })
			});

			if (!response.ok) {
				throw new Error(`HTTP error! status: ${response.status}`);
			}

			return { success: true };
		} catch (error) {
			console.error('Error submitting email:', error);
			return { success: false, error: error.message };
		}
	}

	// Email form functionality
	function setupEmailForm() {
		const form = document.getElementById('email-form');
		const emailInput = document.getElementById('email');
		
		if (form && emailInput) {
			form.addEventListener('submit', async function(e) {
				e.preventDefault();
				
				const email = emailInput.value.trim();
				if (!email) return;
				
				const button = form.querySelector('button');
				const originalText = button.textContent;
				
				// Show loading state
				button.textContent = 'Submitting...';
				button.disabled = true;
				
				// Submit to API
				const result = await submitEmailToAPI(email);
				
				if (result.success) {
					button.textContent = 'Thank you!';
					button.style.backgroundColor = '#b8956b';
					emailInput.value = '';
					
					// Update spots counter after successful submission
					if (window.updateAllSpotsDisplays) {
						setTimeout(() => {
							window.updateAllSpotsDisplays();
						}, 500);
					}
				} else {
					button.textContent = 'Try again';
					button.style.backgroundColor = '#dc3545';
				}
				
				// Reset button after delay
				setTimeout(() => {
					button.textContent = originalText;
					button.style.backgroundColor = '';
					button.disabled = false;
				}, 2000);
			});
		}
	}

	// Initialize everything when DOM is loaded
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', function() {
			setupEmailForm();
			// Show first notification after 500ms, then start rotation
			setTimeout(() => {
				updateNotification();
				setInterval(updateNotification, 5000);
			}, 500);
		});
	} else {
		// DOM is already loaded
		setupEmailForm();
		setTimeout(() => {
			updateNotification();
			setInterval(updateNotification, 5000);
		}, 500);
	}
</script>
