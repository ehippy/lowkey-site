---
// CTA component for additional conversion opportunities
---

<section class="cta">
	<div class="container">
		<div class="cta-content">
			<h2 class="cta-title text-center text-balance">
				Ready to be more thoughtful?
			</h2>
			<p class="cta-subtitle text-center text-balance">
				Join our waiting list and be among the first to experience Lowkey when it launches.
			</p>
			<div class="cta-form">
				<form id="cta-email-form" class="email-form">
					<input 
						type="email" 
						id="cta-email" 
						name="email" 
						placeholder="Enter your email" 
						required 
						class="email-input"
					>
					<button type="submit" class="btn btn-primary">
						Get early access
					</button>
				</form>
				<p class="form-note text-center">
					No spam. Unsubscribe anytime. We respect your privacy as much as you respect your relationship.
				</p>
			</div>
		</div>
	</div>
</section>

<style>
	.cta {
		padding: 6rem 0;
		background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-warm) 100%);
		color: white;
	}

	.cta-content {
		max-width: 600px;
		margin: 0 auto;
		text-align: center;
	}

	.cta-title {
		font-size: 2.5rem;
		font-weight: 600;
		margin-bottom: 1rem;
	}

	.cta-subtitle {
		font-size: 1.25rem;
		margin-bottom: 2.5rem;
		opacity: 0.9;
	}

	.cta-form {
		margin-bottom: 0;
	}

	.email-form {
		display: flex;
		gap: 0.75rem;
		margin-bottom: 1rem;
		max-width: 400px;
		margin-left: auto;
		margin-right: auto;
	}

	.email-input {
		flex: 1;
		padding: 0.75rem 1rem;
		border: none;
		border-radius: var(--border-radius);
		font-size: 1rem;
		background-color: rgba(255, 255, 255, 0.95);
		color: var(--color-text);
		transition: background-color 0.2s ease, box-shadow 0.2s ease;
	}

	.email-input:focus {
		outline: none;
		background-color: white;
		box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
	}

	.email-input::placeholder {
		color: var(--color-text-light);
	}

	.cta .btn-primary {
		background-color: rgba(255, 255, 255, 0.15);
		color: white;
		border: 1px solid rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(10px);
	}

	.cta .btn-primary:hover {
		background-color: rgba(255, 255, 255, 0.25);
		color: white;
		transform: translateY(-1px);
		box-shadow: 0 4px 6px -1px rgba(62, 39, 35, 0.3);
	}

	.form-note {
		font-size: 0.875rem;
		opacity: 0.8;
		max-width: 400px;
		margin: 0 auto;
	}

	@media (max-width: 768px) {
		.cta {
			padding: 4rem 0;
		}

		.cta-title {
			font-size: 2rem;
		}

		.cta-subtitle {
			font-size: 1.1rem;
		}

		.email-form {
			flex-direction: column;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.getElementById('cta-email-form');
		const emailInput = document.getElementById('cta-email');
		
		if (form && emailInput) {
			form.addEventListener('submit', function(e) {
				e.preventDefault();
				
				const email = emailInput.value.trim();
				if (!email) return;
				
				// Here you would integrate with your email service
				// For now, we'll just show a success message
				console.log('CTA Email submitted:', email);
				
				// Simple success feedback
				const button = form.querySelector('button');
				const originalText = button.textContent;
				button.textContent = 'Thank you!';
				button.style.backgroundColor = 'rgba(255, 255, 255, 0.3)';
				
				setTimeout(() => {
					button.textContent = originalText;
					button.style.backgroundColor = '';
					emailInput.value = '';
				}, 2000);
			});
		}
	});
</script>
